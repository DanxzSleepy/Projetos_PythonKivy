<MovableDot>:
    canvas:
        Ellipse:
            pos: self.dot_pos
            size: 30, 30
    Button:
        text: "Esquerda"
        pos: 10, 10
        size_hint: None, None
        size: 100, 40
        on_press: root.move_left()
    Button:
        text: "Direita"
        pos: 120, 10
        size_hint: None, None
        size: 100, 40
        on_press: root.move_right()
    Button:
        text: "Cima"
        pos: 230, 10
        size_hint: None, None
        size: 100, 40
        on_press: root.move_up()
    Button:
        text: "Baixo"
        pos: 340, 10
        size_hint: None, None
        size: 100, 40
        on_press: root.move_down()
