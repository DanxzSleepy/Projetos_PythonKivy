<MainControlWidget>:
    orientation: 'vertical'
    StatusIndicator:
        id: status_widget
    Label:
        text: "ATIVO" if status_widget.is_active else "INATIVO"
        color: (0, 1, 0, 1) if status_widget.is_active else (1, 0, 0, 1)
    Button:
        text: "Alternar"
        on_release: root.alternar_status()
        status_obj: status_widget
